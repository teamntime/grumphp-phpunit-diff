{
    "name": "teamntime/grumphp-phpunit-diff",
    "description": "A GrumPHP task that runs only the tests for the files you have changed",
    "type": "library",
    "require": {
        "php": ">=7.3",
        "phpro/grumphp": "^1.3.3|^2.0",
        "symfony/dependency-injection": "^5.4|^6.1|^7.0",
        "symfony/process": "^5.4|^6.1|^7.0",
        "symfony/options-resolver": "^5.4|^6.1|^7.0",
        "symfony/filesystem": "^5.4|^6.1|^7.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TeamnTime\\GrumPHP\\PHPUnitDiff\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamnTime\\GrumPHP\\PHPUnitDiff\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Niels Vermaut",
            "email": "niels.vermaut@calidos.be"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.6",
        "phpstan/phpstan": "^1.4"
    }
}
